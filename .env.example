# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

#========================================
# Database Configuration
#========================================
DB_URL=jdbc:postgresql://localhost:5432/payment_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_POOL_SIZE=20

#========================================
# Redis Configuration
#========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

#========================================
# JWT Configuration
#========================================
# IMPORTANT: Use a strong random string (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_EXPIRATION_MS=3600000

#========================================
# AWS Configuration
#========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS Secrets Manager
AWS_SECRETS_MANAGER_ENABLED=false
AWS_SECRETS_DB_NAME=payment-system/database

#========================================
# Kafka Configuration
#========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=payment-system

#========================================
# DynamoDB Configuration (Optional - Stage 3)
#========================================
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_PREFIX=payment_system_

#========================================
# Elasticsearch Configuration (Optional - Stage 3)
#========================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

#========================================
# Application Settings
#========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

#========================================
# Security Settings
#========================================
# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

#========================================
# External Services
#========================================
# Mock Exchange Service
EXCHANGE_SERVICE_URL=http://localhost:8081

# Email Service (if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

#========================================
# Monitoring (Optional)
#========================================
#DATADOG_API_KEY=your_datadog_api_key
#NEW_RELIC_LICENSE_KEY=your_newrelic_key
#SENTRY_DSN=your_sentry_dsn

#========================================
# Feature Flags (Optional)
#========================================
FEATURE_MFA_ENABLED=false
FEATURE_ELASTICSEARCH_ENABLED=false
FEATURE_DYNAMODB_ENABLED=false
